custom_require.call(%w[common common-money drinfomon])

class GiveMoney
  include DRC
  include DRCM

  def initialize
    arg_definitions = [
      [
        { name: 'player', regex: /\w+/i, variable: true, description: 'Name of the player to give money to' }
      ]
    ]

    args = parse_args(arg_definitions)

    give_money(args.player)
  end

  def give_money(person)
    return unless DRRoom.pcs.any? { |room_pc| room_pc =~ /#{person}/i }

    loop do
      bput('deposit all', 'You hand', 'The clerk slides', 'You don\'t have any', 'reached the maximum balance')

      break unless withdraw_exact_amount?('10 plat', nil)

      break if bput("give #{person} 10 plat", 'You give', 'while you are in debt') == 'while you are in debt'
    end
  end
end

GiveMoney.new
